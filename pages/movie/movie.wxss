page{
  height: 100%;
}
#movie{
  height: 100%;
}
#music{
  height: 100%;
  background-color: red;
}
#book{
  height: 100%;
  background-color: wheat;
}
.movie-search{
  height: 43px;
  background-color: #1ABC9C;
}
.movie-search input{
  float: left;
  box-sizing: border-box;
  margin: 0 20px;
  background-color: #fff;
  height: 35px;
  font-size: 16px;
  width: calc(100% - 40px);
  border-radius: 20px;
  padding: 0 40px 0 10px;
}
.movie-search icon{
  margin: 0 0 0 -58px;
  padding: 4px;
}
.select{
  height:27px;
  background-color: rgba(255,255,255,.8);
}
.select li{
  display: inline-block;
  text-align: center;
    width: 33.3%;
}
.select-item{
  box-sizing: border-box;
    color: #555;
    display: inline-block;
    padding: 3px 6px;
    margin: 2px 0;
    font-size: 13px;
    -webkit-tap-highlight-color: rgba(255, 0, 0, 0);
}
.select-item.active{
    background-color: #E2E2E2;
    border-radius: 11px;
}
.movie-content{
  height: calc(100% - 72px);
  background-color: white;
  
}
.movie-item{
  margin: 5px 5px 15px 5px;
  font-size: 14px;
  color: #555;
  line-height: 1.3;
}
.movie-item:after{
  content: '';
  display: block;
  height: 0;
  width: 0;
  visibility: hidden;
  clear: both;
}
.movie-img{
  float: left;
  width: 65px;
  height: 110px;
}
.movie-img image{
  max-width: 100%;
  max-height: 100%;
}

.movie-msg{
  float: left;
  width: calc(100% -  65px);
  box-sizing: border-box;
  height: 110px;
  padding-left: 5px;
}
.movie-msg view{
      overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.m-title{
  color: #111;
  font-size: 18px;
}